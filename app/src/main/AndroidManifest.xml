<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apoorv.bibliotheca"
    android:versionCode="1"
    android:versionName="1.1">

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher4"
        android:label="@string/bibl_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainView"
            android:label="MReader">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FileChooser" />
        <activity
            android:name=".BookView"
            android:label="@string/title_activity_book_view" />
        <activity
            android:name=".DataView"
            android:label="@string/title_activity_data_view" />
        <activity
            android:name=".AboutView"
            android:label="@string/aboutprog"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".Reference"
            android:label="@string/reference"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".Metadata"
            android:label="@string/Show_Metadata"
            android:theme="@style/Theme.AppCompat.Light" />
    </application>

</manifest>