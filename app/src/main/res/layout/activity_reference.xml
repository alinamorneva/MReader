<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reference">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="357dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText3"
            android:layout_margin="15dp"
            android:text="Работа с программой "
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="178dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text='После открытия книги, пользователь может настроить  внешний вид программы под свои требования. Для этого в выпадающем меню необходимо выбрать "Настройки" и выбрать желаемые параметрами и затем нажать "Подтвердить". Чтения осуществляется в виде параллельного текста главы. Перелистывание главы осуществляется свайпом влево или право.'
            android:textAlignment="viewEnd" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="321dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Работа с книгой"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginTop="56dp"
            android:text='Для открытия книги необходимо нажать на одну из строк списка. Если список пуст, необходимо добавить файлы формата fb2 и epub в одну из папок внутренней памяти телефона. Затем в выадающем меню нажать "Обновить". Добавленные книги должны быть отображены на главном экране.'
            android:textAlignment="viewEnd" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>